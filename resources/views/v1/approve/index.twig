{% extends "./layout/default" %}

{% block breadcrumbs %}
	{{ Breadcrumbs.render }}
{% endblock %}
{% block content %}
<div class="row">
	<form class="form-horizontal nodisablebutton" id="approve-form" action="{{ route('reports.index.post') }}" method="post">
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			<div class="box">
				<div class="box-header with-border">
					<h3 class="box-title">{{ 'expense_claims'|_ }}</h3>
				</div>
				<div class="box-body">
					<p class="text-info">
						{{ 'more_info_approve'|_ }}
					</p>
					<input type="hidden" name="_token" value="{{ csrf_token() }}"/>
					<div class="form-group">
						<label for="inputApproveUser" class="col-sm-3 control-label">{{ 'approve_user'|_ }}</label>

						<div class="col-sm-9">
							<select name="approve_user" class="form-control" id="inputApproveUser">
								<option label="All" value={{0}} >All</option>
								{% for aprUser in approveUsers %}
									<option label="{{aprUser.email}}" value={{aprUser.id}}
									{% if aprUser.id == userid %}
										selected
									{% endif %}
									>{{ aprUser.email}}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label for="inputCategory" class="col-sm-3 control-label">{{ 'category'|_ }}</label>
						<div class="col-sm-9">
							<select name="category" class="form-control" id="inputCategory">
								<option label="All" value={{0}}>All</option>
								{% for category in categories %}
									<option label="{{category.name}}" value={{category.id}}
									{% if category.id == categoryid %}
										selected
									{% endif %}
									>{{ category.name}}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label for="inputStatu" class="col-sm-3 control-label">{{ 'status'|_ }}</label>
						<div class="col-sm-9">
							<select name="statu" class="form-control" id="inputStatu">
								<option label="All" value={{0}}>All</option>
								{% for statu in status %}
									<option label="{{statu.status}}" value={{statu.id}}
									{% if statu.id == statuid %}
										selected
									{% endif %}
									>{{ statu.status}}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label for="inputExpense" class="col-sm-3 control-label">{{ 'pay_with'|_ }}</label>
						<div class="col-sm-9">
							<select name="expense" class="form-control" id="inputExpense">
								<option label="All" value={{0}}>All</option>
								{% for expense in expenses %}
									<option label="{{expense.name}}" value={{expense.id}}
									{% if expense.id == expenseid %}
										selected
									{% endif %}
									>{{ expense.name}}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label for="inputDateRange" class="col-sm-3 control-label">{{ 'report_date_range'|_ }}</label>

						<div class="col-sm-9">
							<input autocomplete="off" type="text" class="form-control" id="inputDateRange" name="daterange" value="{{ Session.get('start').format('Y-m-d') }} - {{ Session.get('end').format('Y-m-d') }}">
						</div>
					</div>

				</div>
			</div>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		</div>
	</form>

</div>
{# list with expense transactions #}
<div class="row">
