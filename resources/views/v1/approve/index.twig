		<div class="box">
			<div class="box-header with-border">
				<h3 class="box-title">{{ subTitle }}</h3>
			</div>
			<div class="box-body no-padding" id="tableApproves">
				{# actual list #}
				{# {% include 'list.groups' %} #}
			</div>
		</div>
	</div>
</div>

